<!DOCTYPE html>
<html lang="en">
    
<meta charset="UTF-8" />
<title>Books</title>

<% function renderBook(book) { %>
    <li>
        <%= book.title %>
        <ul>
            <li>
                <p>ID: <%= book.id %> </p>
            </li>
            <li>
                <p>Author: <%= book.author %> </p>
            </li>
            <li>
                <p>Bar Code: <%= book.bar_code %> </p>
            </li>
            <li>
                <p>Price: <%= book.price %> </p>
            </li>
            <li>
                <p>State: <%= book.state %> </p>
            </li>
        </ul>
    </li>
<% } %> 

<ul>
    <%= books.map(book => renderBook(book)) %>
</ul>
</html>